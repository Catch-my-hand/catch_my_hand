<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9EBFF"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="내 손을 잡아"
        android:textColor="@color/black"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="약관에 동의해 주세요."
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/Sample1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:background="@color/white"

        android:text="제 1장 총칙 제 1조(목적) 이 약관은 내 손을 잡아(이하 “홈페이지”)에서 제공되는 모든 서비스(이하 ‘서비스’라 한다)의 이용조건 및 절차, 이용자와 당 홈페이지의 권리, 의무, 책임사항과 기타 필요한 사항을 규정함을 목적으로 합니다."
        android:scrollHorizontally="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="약관에 동의합니다."/>

    <EditText
        android:id="@+id/Sample2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:background="@color/white"
        android:text="제 1장 총칙 제 1조(목적) 이 약관은 내 손을 잡아(이하 “홈페이지”)에서 제공되는 모든 서비스(이하 ‘서비스’라 한다)의 이용조건 및 절차, 이용자와 당 홈페이지의 권리, 의무, 책임사항과 기타 필요한 사항을 규정함을 목적으로 합니다."
        android:scrollHorizontally="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="약관에 동의합니다."/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text="다음"
        android:textSize="19dp"
        android:textColor="@color/white">
    </Button>


</LinearLayout>